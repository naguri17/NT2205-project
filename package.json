{
  "name": "ecom-app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:local": "pnpm docker:local && pnpm build",
    "start": "turbo run start",
    "dev": "turbo run dev",
    "dev:local": "pnpm docker:local && pnpm dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "setup:env": "node setup-env.js",
    "setup:db": "turbo run db:generate db:push --filter=@repo/product-db",
    "setup:ssl": "bash scripts/generate-ssl.sh",
    "setup:letsencrypt": "bash scripts/init-letsencrypt.sh",
    "ssl:renew": "bash scripts/renew-ssl.sh",
    "docker:local": "docker compose -f docker-compose.yml -f docker-compose.local.yml up -d",
    "docker:local:down": "docker compose -f docker-compose.yml -f docker-compose.local.yml down",
    "docker:prod": "docker compose -f docker-compose.yml -f docker-compose.prod.yml --env-file .env.production up -d",
    "docker:prod:down": "docker compose -f docker-compose.yml -f docker-compose.prod.yml down",
    "docker:logs": "docker compose logs -f",
    "setup:local": "pnpm install && pnpm setup:env && pnpm docker:local && pnpm setup:db && sleep 30",
    "setup:prod": "pnpm install && pnpm setup:env && pnpm setup:ssl && pnpm docker:prod && pnpm setup:db && sleep 30",
    "deploy:prod": "pnpm build && pnpm k8s:deploy && bash scripts/wait-for-admin.sh",
    "k8s:build": "docker build -t product-service:latest -f apps/product-service/Dockerfile . && docker build -t order-service:latest -f apps/order-service/Dockerfile . && docker build -t payment-service:latest -f apps/payment-service/Dockerfile .",
    "k8s:deploy": "cd k8s && ./deploy.sh",
    "k8s:status": "kubectl get pods --all-namespaces",
    "k8s:logs": "kubectl logs -f",
    "k8s:logs:product": "kubectl logs -f deployment/product-service -n backend",
    "k8s:logs:order": "kubectl logs -f deployment/order-service -n backend",
    "k8s:logs:payment": "kubectl logs -f deployment/payment-service -n backend",
    "k8s:restart": "kubectl rollout restart deployment",
    "k8s:restart:product": "kubectl rollout restart deployment/product-service -n backend",
    "k8s:restart:order": "kubectl rollout restart deployment/order-service -n backend",
    "k8s:restart:payment": "kubectl rollout restart deployment/payment-service -n backend",
    "k8s:scale:product": "kubectl scale deployment/product-service --replicas",
    "k8s:scale:order": "kubectl scale deployment/order-service --replicas",
    "k8s:scale:payment": "kubectl scale deployment/payment-service --replicas",
    "k8s:describe": "kubectl describe",
    "k8s:delete": "kubectl delete -f k8s/",
    "k8s:apply": "kubectl apply -f k8s/"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}