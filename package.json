{
  "name": "ecom-app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "setup:env": "node setup-env.js",
    "setup:infra": "docker-compose up -d",
    "setup:db": "turbo run db:generate db:push --filter=@repo/product-db",
    "setup:all": "pnpm install && pnpm setup:env && pnpm setup:infra && echo '⏳ Chờ DB khởi động...' && node -e \"setTimeout(() => {}, 5000)\" && pnpm setup:db"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
